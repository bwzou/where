<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:id="@+id/tgactivity_relativelayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/activity_bg">

    <RelativeLayout
        android:id="@+id/text_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >

        <com.lid.lib.LabelTextView
            android:id="@+id/labeltextview"
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="16dp"
            android:text="TextView"
            android:textColor="#00000000"
            app:label_backgroundColor="@color/fbutton_color_orange"
            app:label_distance="32dp"
            app:label_orientation="LEFT_TOP"
            app:label_text="POP"
            app:label_height="33dp"
            app:label_textSize="15sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/welcome_linear_ctrlbar"
        android:layout_width="fill_parent"
        android:layout_height="110dip"
        android:background="#97000000"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="5dip"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:paddingTop="13dip"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/text_layout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/activity_theme"
                android:layout_width="200dip"
                android:layout_height="40dip"
                android:text="小伙伴打羽毛球啊"
                android:textSize="22dp"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/activity_time"
                android:layout_width="140dip"
                android:layout_height="40dip"
                android:text="17/05/12 15:30"
                android:textSize="16dp"
                android:textColor="#ffffff"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/activity_keyword"
                android:layout_width="160dip"
                android:layout_height="wrap_content" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#90000000"
                    android:text="交友"
                    android:textSize="20dp"
                    android:textColor="#ffffff"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="#90000000"
                    android:text="运动"
                    android:textSize="20dp"
                    android:textColor="#ffffff"/>
            </LinearLayout>

            <TextView
                android:id="@+id/activity_where"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_v_location"
                android:drawableLeft="@drawable/ic_v_location"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:text="津南校区体育馆"
                android:textSize="16dp"
                android:textColor="#ffffff"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>