<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_foot_print"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.creation.where.activity.LocationMainActivity" >

    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmap_footprint_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true" />

    <RelativeLayout
        android:id="@+id/foot_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:layout_alignParentTop="true"
        android:background="@color/common_top_bar_blue"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="留一个足记，我曾来过"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/btn_foot_send"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:src="@drawable/fx_main_activity_add" />   <!-- 发送 -->

        <ImageView
            android:id="@+id/iv_foot_search"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/btn_foot_send"
            android:clickable="true"
            android:src="@drawable/fx_main_activity_search" />   <!-- 查找 -->
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/footprint_btn_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dip" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/footprint_btn"
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:background="#90000000"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="25dp"
                android:textColor="@color/map_btn_std"
                android:radius="15dip"
                android:textSize="16sp" />

            <Button
                android:id="@+id/footprint_edit"
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:background="#90000000"
                android:layout_alignRight="@id/footprint_btn"
                android:layout_centerVertical="true"
                android:layout_marginRight="90dp"
                android:text="编辑"
                android:textColor="@color/map_btn_std"
                android:radius="15dip"
                android:textSize="16sp" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/footprint_rl_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <!-- 聊天输入框 -->
        <include
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/custom_chat_emoji_layout" />
    </LinearLayout>

</RelativeLayout>

